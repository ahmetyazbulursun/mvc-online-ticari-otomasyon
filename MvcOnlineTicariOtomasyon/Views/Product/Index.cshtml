@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mt-4 mb-4 text-center">Products</h1>

<div class="col mb-3">
    <div class="float-start">
        <a href="/Product/AddProduct" class="px-2 py-1 text-primary rounded-circle" style="background-color: #e9e9e9;" title="Add"><i class="fa fa-plus"></i></a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead align="center" class="table-secondary">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Stock</th>
                        <th>Purchase Price</th>
                        <th>Sale Price</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody align="center">
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td><img src="@x.Image" class="img-fluid" /></td>
                            <td>@x.Name</td>
                            <td>@x.Category.CategoryName</td>
                            <td>@x.Brand</td>
                            <td>@x.Stock</td>
                            <td>@x.PurchasePrice</td>
                            <td>@x.SalePrice</td>
                            <td>
                                <ul class="p-0 m-0">
                                    <li class="d-inline px-2"><a href="/Product/UpdateProduct/@x.ID" title="Update" class="text-success"><i class="fa fa-pen"></i></a></li>
                                    <li class="d-inline px-2"><a href="/Product/DeleteProduct/@x.ID" title="Delete" class="text-danger"><i class="fa fa-trash"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>